
#:import SettingsForm libs.uix.baseclass.settings.SettingsForm
#:import MDSeparator kivymd.uix.card.MDSeparator
#:import MDTextField kivymd.uix.textfield.MDTextField

# Экран настроек.

<SettingsForm>:
    name: 'settings_form'
    ip: ip
    user: user
    password: password
    sms: sms


    BoxLayout:
        orientation: 'vertical'
        padding: dp(10), dp(10)
        spacing: dp(10)

        MDToolbar:
            id: actionbar
            pos_hint: {"top": 1}
            elevation: 10
            title: app.translation._('Настройки')
            left_action_items: [['chevron-left', lambda x: app.back_screen(27)]]

        Label:
            size_hint: None, None
            height: dp(16)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '14sp'
            text: app.translation._('IP адрес')

        MDTextField:
            id: ip
            hint_text: app.translation._('Введите IP')

        Label:
            size_hint: None, None
            height: dp(16)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '14sp'
            text: app.translation._('Логин')

        MDTextField:
            id: user
            hint_text: app.translation._('Введите логин')

        Label:
            size_hint: None, None
            height: dp(16)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '14sp'
            text: app.translation._('Пароль')

        MDTextField:
            id: password
            hint_text: app.translation._('Введите пароль')
            password: True

        Label:
            size_hint: None, None
            height: dp(16)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '14sp'
            text: app.translation._('СМС код (вместо пароля)')

        MDTextField:
            id: sms
            hint_text: app.translation._('Введите смс код')
            password: True
        Widget:
