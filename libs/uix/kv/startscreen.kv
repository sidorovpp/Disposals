#:import License libs.uix.baseclass.license.License
#:import BaseScreen libs.uix.baseclass.basescreen.BaseScreen
#:import About libs.uix.baseclass.about.About
#:import Disposal libs.uix.baseclass.disposal.Disposal
#:import SettingsForm libs.uix.baseclass.settings.SettingsForm
#:import DisposalForm libs.uix.baseclass.disposal_form.DisposalForm

<ItemDrawer>:
    IconLeftWidget:
        id: icon
        icon: root.icon
        text_color: root.text_color


<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "data/logo/kivy-icon-256.png"

    MDLabel:
        text: app.translation._('Задачи ВКБ')
        font_style: "Button"
        adaptive_height: True


    ScrollView:

        DrawerList:
            id: md_list

<StartScreen>

    MDNavigationLayout:
        id: start

        ScreenManager:
            id: manager

            BaseScreen:
                id: base

            License:
                id: license

            About:
                id: about

            Disposal:
                id: disposal

            SettingsForm:
                id: settings_form

            DisposalForm:
                id: disposal_form

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                id: content_drawer
