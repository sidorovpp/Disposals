#:import MDSeparator kivymd.uix.card.MDSeparator
#:import MDTextField kivymd.uix.textfield.MDTextField
#:import MDSlider kivymd.uix.slider.MDSlider

<DisposalForm>:
    name: 'disposal_form'
    receiver: receiver
    theme: theme
    task: task
    urgency: urgency


    BoxLayout:
        orientation: 'vertical'
        padding: dp(10), dp(10)
        spacing: dp(10)

        MDToolbar:
            id: actionbar
            pos_hint: {"top": 1}
            elevation: 10
            title: app.translation._('Новая задача')
            left_action_items: [['chevron-left', lambda x: app.back_screen(27)]]

        Label:
            size_hint: None, None
            height: dp(16)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '14sp'
            text: app.translation._('Получатель')

        BoxLayout:
            orientation: 'horizontal'
            MDTextField:
                id: receiver
                required: True
                hint_text: app.translation._('Введите часть ФИО для поиска')
                on_text: root.receiver_change(self.text)
                theme_foreground_color : 'Custom'
            MDIconButton:
                icon: 'magnify'
                on_release: root.search_staff()

        Label:
            size_hint: None, None
            height: dp(16)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '14sp'
            text: app.translation._('Тема')

        MDTextField:
            id: theme
            required: True
            hint_text: app.translation._('Введите тему')

        Label:
            size_hint: None, None
            height: dp(16)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '14sp'
            text: app.translation._('Задача')

        MDTextField:
            id: task
            hint_text: app.translation._('Введите задачу')
            required: True
            multiline: True

        Label:
            size_hint: None, None
            height: dp(16)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '14sp'
            text: app.translation._('Важность')

        MDSlider:
            id: urgency
            min: 1
            max: 5
            value: 2

        Widget:

        BoxLayout:
            orientation: 'horizontal'
            Widget:
            MDFlatButton:
                text: app.translation._('Сохранить')
                on_release: root.save()

            MDFlatButton:
                text: app.translation._('Отмена')
                on_release: root.cancel()

