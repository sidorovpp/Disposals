#:import MDSeparator kivymd.card.MDSeparator
#:import MDDropdownMenu kivymd.menu.MDDropdownMenu
#:import License libs.uix.baseclass.license.License
#:import RecycleView kivy.uix.recycleview

# Экран задачи.

<Disposal>:
    name: 'disposal'

    MDSpinner:
        id: spinner
        size_hint: None, None
        size: dp(23), dp(23)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    BoxLayout:
        id: layout
        orientation: 'vertical'
        padding: dp(10), dp(10)
        spacing: dp(10)

        Label:
            id: number
            size_hint: None, None
            height: dp(16)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '14sp'

        Label:
            id: sender
            size_hint: None, None
            height: dp(14)
            width: self.texture_size[0]
            halign: 'left'
            color: 0, 0, 0, 1
            font_size: '12sp'

        Label:
            id: receiver
            size_hint: None, None
            height: dp(14)
            width: self.texture_size[0]
            halign: 'left'
            color: 0, 0, 0, 1
            font_size: '12sp'

        MDSeparator:

        Label:
            id: theme
            halign: 'left'
            text_size: self.width, None
            size_hint: 1, None
            height: self.texture_size[1]
            color: 0, 0, 0, 1
            color: app.theme_cls.primary_color
            font_size: '14sp'

        MDSeparator:

        Task:
            id: task
            viewclass: 'TaskLabel'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

        MDSeparator:

        Notes:
            id: notes
            viewclass: 'NoteLabel'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

        MDSeparator:

    AddCommentButton:
        id: menu_button
        icon: 'comment'
        opposite_colors: True
        elevation_normal: 8
        pos_hint: {'center_x': 0.9, 'center_y': 0.1}


<AddCommentButton>

<Notes>

<Task>

<NoteLabel>
    halign: 'left'
    text_size: self.width, None
    size_hint: 1, None
    height: self.texture_size[1]
    color: 0, 0, 0, 1
    markup: True

<TaskLabel>
    halign: 'left'
    text_size: self.width, None
    size_hint: 1, None
    height: self.texture_size[1]
    color: 0, 0, 0, 1
    markup: True
