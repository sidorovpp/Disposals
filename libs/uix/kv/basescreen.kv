<BaseScreen>:
    name: 'base'

    MDSpinner:
        id: spinner
        size_hint: None, None
        size: dp(23), dp(23)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        active: False

    BoxLayout:
        orientation: 'vertical'

        ScrollView:
            do_scroll_x: False  # Important for MD compliance
            DisposalList:
                id: disposal_list

<DisposalList>

<PopupBox>:
    pop_up_text: _pop_up_text
    size_hint: .5, .5
    auto_dismiss: True
    title: 'Status'

    BoxLayout:
        orientation: "vertical"
        Label:
            id: _pop_up_text
            text: ''